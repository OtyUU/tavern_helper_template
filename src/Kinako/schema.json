{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "affection": {
      "type": "number"
    },
    "mood": {
      "default": "happy",
      "type": "string",
      "enum": [
        "happy",
        "angry",
        "sad",
        "excited",
        "bored"
      ]
    },
    "energy": {
      "type": "number"
    },
    "trust": {
      "type": "number"
    },
    "dependency": {
      "type": "number"
    },
    "inventory": {
      "default": {},
      "type": "object",
      "propertyNames": {
        "description": "item name",
        "type": "string"
      },
      "additionalProperties": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string"
          },
          "quantity": {
            "type": "number"
          }
        },
        "required": [
          "description",
          "quantity"
        ]
      }
    },
    "titles": {
      "default": [],
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "status": {
      "default": {},
      "type": "object",
      "properties": {
        "hunger": {
          "type": "number"
        },
        "fatigue": {
          "type": "number"
        },
        "happiness": {
          "type": "number"
        }
      },
      "required": [
        "hunger",
        "fatigue",
        "happiness"
      ]
    },
    "memory": {
      "default": [],
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "event": {
            "type": "string"
          },
          "timestamp": {
            "type": "number"
          }
        },
        "required": [
          "event",
          "timestamp"
        ]
      }
    }
  },
  "required": [
    "affection",
    "energy",
    "trust",
    "dependency"
  ]
}