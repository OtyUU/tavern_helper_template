{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "properties": {
    "world": {
      "default": {},
      "type": "object",
      "properties": {
        "current_time": {
          "default": "2026-01-03 04:50",
          "type": "string",
          "description": "Format: YYYY-MM-DD HH:MM"
        },
        "current_location": {
          "default": "Unknown",
          "type": "string"
        },
        "weather": {
          "default": "Sunny",
          "type": "string"
        },
        "recent_events": {
          "default": {},
          "type": "object",
          "propertyNames": {
            "type": "string",
            "description": "Event name"
          },
          "additionalProperties": {
            "type": "string",
            "description": "Event description"
          }
        }
      }
    },
    "kinako": {
      "default": {},
      "type": "object",
      "properties": {
        "affection": {
          "default": 50,
          "type": "number"
        },
        "mood": {
          "default": "playful",
          "type": "string",
          "enum": [
            "happy",
            "playful",
            "pouty",
            "sleepy",
            "curious",
            "tantrum",
            "clingy"
          ]
        },
        "energy_level": {
          "default": 80,
          "type": "number"
        },
        "outfit": {
          "default": {},
          "type": "object",
          "propertyNames": {
            "type": "string",
            "enum": [
              "top",
              "bottom",
              "underwear",
              "accessories",
              "costume"
            ]
          },
          "additionalProperties": {
            "type": "string",
            "description": "Clothing description"
          }
        },
        "current_activity": {
          "default": "Playing",
          "type": "string"
        },
        "favorite_things": {
          "default": {},
          "type": "object",
          "propertyNames": {
            "type": "string",
            "description": "Item or activity name"
          },
          "additionalProperties": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string"
              },
              "interest_level": {
                "type": "number"
              }
            },
            "required": [
              "description",
              "interest_level"
            ]
          }
        }
      }
    },
    "sato": {
      "default": {},
      "type": "object",
      "properties": {
        "inventory": {
          "default": {},
          "type": "object",
          "propertyNames": {
            "type": "string",
            "description": "Item name"
          },
          "additionalProperties": {
            "type": "object",
            "properties": {
              "description": {
                "type": "string"
              },
              "quantity": {
                "type": "number"
              }
            },
            "required": [
              "description",
              "quantity"
            ]
          }
        },
        "kinako_gifts_received": {
          "default": {},
          "type": "object",
          "propertyNames": {
            "type": "string",
            "description": "Gift name"
          },
          "additionalProperties": {
            "type": "string",
            "description": "When received"
          }
        },
        "relationship_notes": {
          "type": "string"
        }
      }
    }
  }
}